<header>
  <div class="container">
    <a href="/">
      <div class="logo">
        <h1>HawkShop</h1>
        <h2>Auto peças</h2>
      </div>
    </a>

    <!-- action="/products/search" -->
    <form class="search" method="GET" action="/produtos/buscar">
      <input 
        type="text"
        name="filter"
        placeholder="Buscar por Produtos"
        {% if buscar.term %}
          value={{buscar.term}}
        {% endif %}
      >
    </form>

    <!-- ADS = anuncios -->
    <nav class="primary">
      <ul>
        <li>
          <a href="/ads/criar">
            <i class="material-icons">add</i>
            Novo Anúncio
          </a>
        </li>
        <li class="contas">
          <a href="/contas">
            <i class="material-icons">account_circle</i>
            Minha Conta
          </a>
          {%if session.usuarioId%}
          <ul class="submenu">
            <li>
              <a href="/usuarios">Minha conta</a>
            </li>
            <li>
              <a href="/comprar">Meus pedidos</a>
            </li>
            <li>
              <a href="/vender">Minhas vendas</a>
            </li>
            <li>
              <form action="/usuarios/logout" method="POST">
                <button>Sair</button>
              </form>
            </li>
          </ul>
          {%endif%}
        </li>
      </ul>
    </nav>

  </div>
</header>