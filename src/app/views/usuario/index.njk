{% extends "layout.njk" %}

{% block content %}

  <section class="usuario-dashboard container form">
    <!--action="" é para onde ele vai enviar-->
    <form method="POST" action="/usuarios?_method=PUT">

      <div class="header">
        <h3>Detalhes</h3>
      </div>

      <div class="campos">
        {% include 'usuario/campos.njk' %}
        <input type="hidden" name="id" value={{usuario.id}}>
      </div>

      <button class="button editar" type="submit">Atualizar</button>

    </form>

    <form id="form-delete" action="/usuarios?_method=DELETE" method="post">
      <input type="hidden" name="id" value={{usuario.id}}>
      <button class="button delete" type="submit">Deletar</button>
    </form>

  </section>

  <script>
      const formDelete = document.querySelector('#form-delete')
      formDelete.addEventListener("submit", function(event) {
        const confirmation = confirm("Tem certeza que deseja excluir sua conta? Essa operação não poderá ser desfeita")
        if(!confirmation) {
          event.preventDefault()
        }
      
      })
    </script>

{% endblock content %}